{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  },
  "include": [
    "scenarios/**/*",
    "lib/**/*",
    "playwright.config.ts",
    "global-setup.ts",
    "fixtures.ts"
  ],
  "exclude": ["node_modules"]
}
